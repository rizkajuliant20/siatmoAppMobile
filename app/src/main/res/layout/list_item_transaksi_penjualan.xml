<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/row_containerTrans"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/layoutIdTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:weightSum="2"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Sparepart"
            android:id="@+id/idTransaksi"
            android:textColor="#000000" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LayoutDetTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layoutIdTrans"
        android:layout_alignStart="@+id/layoutIdTrans"
        android:layout_below="@+id/layoutIdTrans"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:textSize="15sp"
        android:weightSum="2">

        <TextView
            android:id="@+id/cabangTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cabang"
            android:textSize="15sp"/>
    </RelativeLayout>

</RelativeLayout>

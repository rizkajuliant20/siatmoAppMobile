<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.customerService.kendaraanPelanggan.KendaraanPelangganUbahActivity"
    android:background="@drawable/bgsplashscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <!-- Sparepart Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="Tipe Motor"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:textColor="#000000"
                android:id="@+id/tv1"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MTR-"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/TVIdPelUbahKendaraanPel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:visibility="visible"/>

            <Spinner
                android:id="@+id/spinnerIdPelUbahKendaraanPel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Id Customer"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:textColor="#000000"
                android:id="@+id/tv2"
                android:textSize="16sp"
                android:layout_below="@id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLG-"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/TVIdTipeUbahKendaraanPel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:visibility="visible"/>

            <Spinner
                android:id="@+id/spinnerIdTipeMotorUbahKendaraanPel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/inputNomorPolisiUbahKendaraanPel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Polisi"
                android:inputType="text"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/edit_imgUbahKend"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/save_imgUbahKend"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/del_imgUbahKend"
        android:visibility="visible"/>

</RelativeLayout>